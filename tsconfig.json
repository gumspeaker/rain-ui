{
  "compilerOptions": {
    "baseUrl": "./",
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "stripInternal": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "paths": {
      "raind": ["src/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["src/*/demo/*", "src/.umi", "src/.umi-production"]
}
